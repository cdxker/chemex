#!/usr/bin/env sh

# basic layout and gaps
yabai -m config layout bsp
yabai -m config split_ratio          0.60
yabai -m config window_gap           20
yabai -m config top_padding          20
yabai -m config bottom_padding       20
yabai -m config left_padding         20
yabai -m config right_padding        20

# borders
yabai -m config window_border         on
yabai -m config window_border_width   3
yabai -m config active_window_border_color  0xffebcb8b
yabai -m config normal_window_border_color  0xff666666
yabai -m config insert_feedback_color       0xff888888

# focus and mouse behaviour
yabai -m config focus_follows_mouse   autoraise
yabai -m config mouse_follows_focus   on

# mouse actions similar to pointer settings
yabai -m config mouse_modifier        alt
yabai -m config mouse_action1         move
yabai -m config mouse_action2         resize

# optional signals for display changes (adjust as needed)
# yabai -m signal --add event=display_added   action="$HOME/.config/yabai/yabar.sh"
# yabai -m signal --add event=display_removed action="$HOME/.config/yabai/yabar.sh"

echo "yabai configuration loaded"
