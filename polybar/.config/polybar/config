[module/space]
type = custom/text
margin = 0
padding = 0
content = "|"

[module/menu]
type = custom/text

content = "apps"
content-background = #454545
content-foreground = ${colors.yellow}

content-padding = 5
content-margin = 0
click-left = rofi -show drun
click-right = rofi -show window

[module/bspwm]
type = internal/bspwm

; ws-icon-0 = main; 📖
; ws-icon-1 = thrash; 🎆
; ws-icon-2 = chat; 💬
; ws-icon-3 = music; 🎹
; ws-icon-default= 📄

ws-icon-0 = main-1; 
ws-icon-1 = web;
ws-icon-2 = chat;
ws-icon-3 = music; 
ws-icon-4 = thrash; 
ws-icon-5 = main-2; 
ws-icon-default =  

format = <label-state> <label-mode>
label-monitor = %name%

label-focused = "%icon% %name%"
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
;label-focused-underline= ${colors.blue}
label-focused-padding = 2

label-occupied = "%name%"
; label-occupied = "%name%:/%icon%/"
label-occupied-foreground = ${colors.cyan}
label-occupied-padding = 2

label-urgent = "%name%"
; label-urgent = "%name%:!%index%!"
label-urgent-background = ${colors.cyan}
label-nrgent-padding = 2

label-empty = 
; label-empty = "%icon%"
; label-empty-padding = 2
label-empty-foreground = ${colors.lightgray}
label-empty-padding = 0


[module/mpd]
type = internal/mpd
format-online = <label-song>  <label-time>

click-left = $TERMINAL -e ncmpcpp
click-right = mpc toggle

label-song =  %artist% - %title%
label-song-maxlen = 70
label-song-ellipsis = true

format-paused-foreground = ${colors.gray}

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = ﯧ

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.gray}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "💻 "
format-prefix-foreground = ${colors.gray}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "🧠 "
format-prefix-foreground = ${colors.gray}
format-underline = ${colors.darkcyan}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 60

date = 
date-alt= %Y/%m/%d

time = %I:%M %p
time-alt = %H:%M


; format-prefix = " "
format-prefix-foreground = ${colors.gray}

label = %date% %time%

[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = "  %percentage%%"
format-volume-prefix = "🔉"
label-volume-foreground = ${colors.foreground}
format-volume-prefix-foreground = ${colors.blue}

format-muted = <label-muted>
label-muted = "🔈" 
label-muted-foreground = ${colors.red}


[module/battery1]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98

;format-charging = Charging... <label-charging>
